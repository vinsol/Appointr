<h1>Listing Services</h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<table class = 'table table-hover table-striped'>
  <tr>
    <th>
      Name
    </th>
    <th>
      Duration
    </th>
    <th>
      Actions
    </th>
  </tr>
  <% @services.each do |service| %>
    <tr> 
      <td>
        <%= service.name.capitalize %>
      </td>
      <td>
        <%= service.duration %>
      </td>
      <td>
        <%= link_to 'Show', admin_service_path(service) %>
        |
        <%= link_to 'Edit', edit_admin_service_path(service) %><br/>
      </td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'New service', new_admin_service_path %>