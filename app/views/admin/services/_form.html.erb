<%= form_for([:admin, @service], html: { class: "form-horizontal" }) do |f| %>

    <% if @service.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
    <%= error_span(@service[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :duration, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :duration, options_for_select(get_duration_periods, @service.duration), :class => 'form-control' %>
    </div>
    <%= error_span(@service[:duration]) %>
  </div>
  <div class="control-group">
    <%= f.label :enabled, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :enabled, :class => 'form-control' %>
    </div>
    <%= error_span(@service[:enabled]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
<% end %>
