<% if notice %>
  <div class="alert fade in alert-danger ">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%= notice %>
  </div>
<% end %>

<p>
  <strong>Customer:</strong>
  <%= @appointment.customer.name.titleize %>
</p>

<p>
  <strong>Service:</strong>
  <%= @appointment.service.name.titleize %>
</p>

<p>
  <strong>Staff:</strong>
  <%= @appointment.staff.name.titleize %>
</p>

<p>
  <strong>Time:</strong>
  <%= @appointment.start_at.strftime("%I:%M %p") %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @appointment.duration %> minutes
</p>

<p>
  <strong>Date:</strong>
  <%= @appointment.start_at.strftime("%d %b %Y") %>
</p>

<p>
  <strong>State:</strong>
  <%= @appointment.state %>
</p>

<p>
  <strong>Remarks:</strong>
  <%= @appointment.remarks.try(:capitalize) %>
</p>

<% if params[:cancellable] %>
  <%= button_to 'Cancel Appointment', cancel_admin_appointment_path(@appointment),remote: true, method: :patch, form: {id: 'cancellation'}, params: {remarks: '', cancellable: true} %>
<% end %>
