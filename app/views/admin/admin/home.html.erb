<div class='container-fluid'>
  <div class='row'>
    <h1>Hey admin</h1>
  </div>
  <div class='row'>
    <%= button_to 'List View', admin_appointments_path, remote: true, method: :get, id: 'list_view' %>
    <%= button_to 'Calendar View', admin_appointments_path, remote: true, method: :get, id: 'calendar_view' ,class: 'hidden' %>
  </div>
  <div class='row'>
    <%= form_tag('/admin/appointments/search', remote: true, class: 'hidden', id: 'search_form') do -%>
      <div><%= text_field_tag 'search', nil, placeholder: 'Enter search term...' %>
      <div><%= submit_tag 'Save' %></div>
    <% end -%>
    <div id='dates'>
      <%= label_tag 'start' %>
      <%= text_field_tag 'start', nil %>     
      <%= label_tag 'end' %>
      <%= text_field_tag 'end', nil %>
      <a id='clear_dates'><b>Clear Dates</b></a>
    </div>
  </div>
  <div id='appointments'>
  </div>
</div>

<%= javascript_include_tag 'appointment_filter' %>

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
