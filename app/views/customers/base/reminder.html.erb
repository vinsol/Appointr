<h1>Appointment Reminder Settings</h1>
<br />
<h4>You can set a time interval at which you will receive a reminder mail.</h4>
<%= form_for @customer, html: { class: "form-horizontal" } do |f| %>
  <span class="control-group">
    <div>
    <%= f.label 'Number of days/hours/minutes', for: :number, class: 'control-label' %>
    </div>
    <span class="controls">
        <%= f.number_field :number %>
    </span>
  </span>
  <span class="control-group">
    <span class="controls">
      <%= f.select :time, options_for_select(get_time_options, f.object.time) %>
    </span>
  </span>
  <div>
  <%= f.submit :Update, :class => 'btn btn-primary' %>
  </div>
<% end %>
<%= button_to 'Cancel', customer_home_path, method: :get, class: 'btn btn-secondary', id: 'cancel_button' %>
