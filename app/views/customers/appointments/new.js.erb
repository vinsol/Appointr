var $modal = $('.modal'),
    $modalBody = $('.modal .modal-body'),
    $modalHeading = $('.modal #myModalLabel'),
    service_id = $('#service').val(),
    service_name = $('#service option:selected').text(),
    staff_id = $('#staff').val(),
    staff_name = $('#staff option:selected').text();
$modalHeading.html("New Appointment");
$modalBody.html("<%= escape_javascript(render 'form') %>");
$modal.modal({ backdrop: false });
$('#appointment_service').val(service_id)
$('#appointment_service').before(service_name)
$('#appointment_staff').val(staff_id)
if (staff_id != '') {
  $('#appointment_staff').before('Staff: ' + staff_name)
}