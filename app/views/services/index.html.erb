<h1>Listing Services</h1>

<table class = 'table'>
  <tr>
    <th>
      Name
    </th>
    <th>
      Duration
    </th>
  </tr>
  <% @services.each do |service| %>
    <tr> 
      <td>
        <%= service.name %>
      </td>
      <td>
        <%= service.duration %>
      </td>
      <td>
        <%= link_to 'Show', service %><br/>
      </td>
      <td>
        <%= link_to 'Edit', edit_service_path(service) %><br/>
      </td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'New service', new_service_path %>