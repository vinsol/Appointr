<% if :notice %>
  <div class="row">
    <%= flash[:notice] %>
  </div>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @staff.name %>
</p>

<p>
  <strong>Designation:</strong>
  <%= @staff.designation %>
</p>

<p>
  <strong>Services</strong>
  <%= @staff.services.map(&:name).join(', ') %>
</p>

<%= link_to 'Edit', edit_staff_path(@staff), method: :get %> |
