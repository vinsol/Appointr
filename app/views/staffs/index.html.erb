<h1>Listing Staff</h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<table class = 'table table-hover table-striped'>
  <tr>
    <th>
      Name
    </th>
    <th>
      Designation
    </th>
    <th>
      Email
    </th>
    <th>
      Actions
    </th>
  </tr>
  <% @staffs.each do |staff| %>
    <tr> 
      <td>
        <%= staff.name %>
      </td>
      <td>
        <%= staff.designation %>
      </td>
      <td>
        <%= staff.email %>
      </td>
      <td>
        <%= link_to 'Show', staff %>
        |
        <%= link_to 'Edit', edit_staff_registration_path(staff) %><br/>
      </td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'New staff', new_staff_registration_path %>