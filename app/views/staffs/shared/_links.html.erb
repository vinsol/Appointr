<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", staff_session_path() %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_staff_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_staff_confirmation_path(resource_name) %><br />
<% end -%>
